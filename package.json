{
  "name": "eleuterios-sindri",
  "version": "0.1.0",
  "description": "A notepad to publish webs, pdfs, presentations and apps",
  "main": "./out/main/index.js",
  "author": "eleuterios.org",
  "homepage": "https://eleuterios.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "build:fast": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:win:fast": "npm run build:fast && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.eleuterios.sindri",
    "productName": "EleuteriosSindri",
    "files": [
      "**/*",
      "resources/**/*"
    ],
    "asarUnpack": [
      "resources/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "eleuterios",
        "repo": "eleuterios-sindri"
      }
    ]
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@fullcalendar/core": "^6.1.19",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/vue3": "^6.1.19",
    "@vueup/vue-quill": "^1.2.0",
    "amqplib": "^0.10.8",
    "axios": "^1.7.7",
    "bcryptjs": "^3.0.2",
    "csv": "^6.4.1",
    "dexie": "^4.2.0",
    "electron-updater": "^6.6.2",
    "express": "^4.21.1",
    "html-to-markdown": "^1.0.0",
    "http-proxy-middleware": "^3.0.3",
    "js-cookie": "^3.0.5",
    "marked": "^17.0.0",
    "node-thermal-printer": "^4.5.0",
    "pinia": "^2.2.6",
    "serialport": "^12.0.0",
    "sharp": "^0.34.2",
    "socket.io-client": "^4.8.1",
    "underscore": "^1.13.7"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^1.0.2",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@rushstack/eslint-patch": "^1.7.1",
    "@types/node": "^20.11.30",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "electron": "36.3.2",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.1",
    "lodash": "^4.17.21",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.4.2",
    "vite": "^5.0.12",
    "vue": "^3.4.15",
    "vue-router": "^4.4.5",
    "vue-tsc": "^1.8.27"
  }
}
